<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.FeedActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/feedToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorToolbar"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:title="@string/appName"
            app:titleTextAppearance="@style/TextAppearance.AppCompat.Large"
            app:titleTextColor="@color/colorToolbarTitle" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/feedPostView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <LinearLayout
            android:id="@+id/feedBottomMenu"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorToolbar"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/feedBottomMenuHomeBtn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@color/colorToolbar"
                android:backgroundTintMode="multiply"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_feed_bottom_menu_home_icon_foreground" />

            <ImageButton
                android:id="@+id/feedBottomMenuSearchBtn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@color/colorToolbar"
                android:backgroundTintMode="src_in"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_feed_bottom_menu_search_icon_foreground" />

            <ImageButton
                android:id="@+id/feedBottomMenuAddBtn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@color/colorToolbar"
                android:backgroundTintMode="src_in"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_feed_bottom_menu_add_icon_foreground" />

            <ImageButton
                android:id="@+id/feedBottomMenuSavesBtn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@color/colorToolbar"
                android:backgroundTintMode="src_in"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_feed_bottom_menu_saves_icon_foreground" />

            <ImageButton
                android:id="@+id/feedBottomMenuProfileBtn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@color/colorToolbar"
                android:backgroundTintMode="src_in"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_feed_bottom_menu_profile_icon_foreground" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>