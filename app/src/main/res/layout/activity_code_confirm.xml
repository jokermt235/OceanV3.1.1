<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.CodeConfirmActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/codeConfirmLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/codeConfirmTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="58dp"
                android:layout_marginEnd="20dip"
                android:text="@string/code_title"
                android:textColor="@color/colorDarkText"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/codeConfirmLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="60dp"
                android:layout_marginEnd="16dp"
                android:text="@string/code_info"
                android:textColor="@color/colorDarkText"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="109dp"
                android:layout_marginEnd="16dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/codeConfirmCode"
                    android:layout_width="168dp"
                    android:layout_height="48dp"
                    android:background="@color/colorToolbar"
                    android:ems="6"
                    android:hint="000000"
                    android:inputType="number|textPassword"
                    android:letterSpacing="1"
                    android:maxEms="6"
                    android:maxLength="6"
                    android:minEms="6"
                    android:password="false" />

            </LinearLayout>

            <TextView
                android:id="@+id/codeConfirmLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="40dip"
                android:layout_marginEnd="20dip"
                android:text="@string/login_continue_btn_text"
                android:textAllCaps="true"
                android:textColor="@color/colorMutedLink"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/codeConfirmProgress"
                style="@style/Widget.AppCompat.ProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:indeterminateTint="@color/colorPrimary"
                android:visibility="gone" />


        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>