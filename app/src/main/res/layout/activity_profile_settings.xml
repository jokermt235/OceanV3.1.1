<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.ProfileSettingsActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/profileSettingsToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:title="@string/profile_settings_toolbar_title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/profileSettingsSocialIcon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@mipmap/ic_profile_settings_social_icon_foreground" />

                <TextView
                    android:id="@+id/profileSettingsLink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="@string/profile_settings_social_link"
                    android:textColor="@color/colorDarkText"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/profileSettingsEditIcon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@mipmap/ic_profile_settings_edit_icon_foreground" />

                <TextView
                    android:id="@+id/profileSettingsEditLink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="@string/profile_settings_edit_link"
                    android:textColor="@color/colorDarkText"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/profileSettingsPlaceIcon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@mipmap/ic_profile_settings_place_icon_foreground" />

                <TextView
                    android:id="@+id/profileSettingsPlaceLink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="@string/profile_settings_place_link"
                    android:textColor="@color/colorDarkText"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/profileSettingsShareIcon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@mipmap/ic_profile_settings_share_icon_foreground" />

                <TextView
                    android:id="@+id/profileSettingsShareLink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="@string/profile_settings_friends_link"
                    android:textColor="@color/colorDarkText"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/profileSettingsReviewIcon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@mipmap/ic_profile_settings_review_icon_foreground" />

                <TextView
                    android:id="@+id/profileSettingsReviewLink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="@string/profile_settings_review_link"
                    android:textColor="@color/colorDarkText"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/profileSettingsWriteUsIcon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@mipmap/ic_profile_settings_write_us_icon_foreground" />

                <TextView
                    android:id="@+id/profileSettingsWriteUsLink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="@string/profile_settings_write_us_link"
                    android:textColor="@color/colorDarkText"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/profileSettingsBottomMenuView"
            android:layout_width="match_parent"
            android:layout_height="50dp">
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>